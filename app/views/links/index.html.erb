<div class="w-full">
  <h1 class="font-bold text-4xl">Links</h1>
  <div class="w-full">
  <% @links.each do |link|%>
    <a class="flex w-full" href="<%= link_path(link)%>">
      <div>
        <%= link.title %>
      </div>
      <div class="flex-1">
        <%= link.href %>
      </div>
      <div>
        <%= link.clicks %>
      </div>
    </a>
    <% end %>
  </div>
</div>
