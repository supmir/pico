<div class="">
  <h1 class="font-bold text-4xl">
    <%= @link.title %>
  </h1>
  <a href="<%= @link.href %>">
    <%= @link.href %>
  </a>

  <div>

    <% @link.shortened_links.each do |shortened_link| %>
      <div class="flex">
        <div><%=shortened_link.path%></div>
        <div>
            <%= shortened_link.clicks %>
        </div>
      </div>
    <% end %>

  </div>
</div>
